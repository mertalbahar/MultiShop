<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@ViewData["Title"] - MultiShop E-Ticaret</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/templates/ovioadmin/html/bootstrap/css/bootstrap.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Template style -->
    <link rel="stylesheet" href="~/templates/ovioadmin/html/dist/css/style.css">
    <link rel="stylesheet" href="~/templates/ovioadmin/html/dist/et-line-font/et-line-font.css">
    <link rel="stylesheet" href="~/templates/ovioadmin/html/dist/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/templates/ovioadmin/html/dist/weather/weather-icons.min.css">
    <link type="text/css" rel="stylesheet" href="~/templates/ovioadmin/html/dist/weather/weather-icons-wind.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    <script src="~/templates/ovioadmin/html/plugins/charts/code/highcharts.js"></script>
</head>

<body class="sidebar-mini">
    <div class="wrapper">

        <!-- Main Header -->
        <partial name="_AdminHeader" />
        <!-- Left side column. contains the logo and sidebar -->
        <partial name="_AdminSidebar" />

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @await Component.InvokeAsync("_DashboardBreadcrumbComponentPartial")

            <!-- Main content -->
            <section class="content container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
            </section>
            <!-- content -->
        </div>
        <!-- content-wrapper -->
        <!-- Main Footer -->
        <partial name="_AdminFooter" />
    </div>
    <!-- wrapper -->
    <!-- jQuery -->
    <script src="~/templates/ovioadmin/html/dist/js/jquery.min.js"></script>
    <script src="~/templates/ovioadmin/html/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/templates/ovioadmin/html/dist/js/ovio.js"></script>

    <!-- charts -->
    <script src="~/templates/ovioadmin/html/plugins/charts/code/modules/exporting.js"></script>
    <script src="~/templates/ovioadmin/html/plugins/charts/chart-functions.js"></script>
</body>
</html>