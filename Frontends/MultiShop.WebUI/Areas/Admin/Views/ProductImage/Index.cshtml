@model List<ResultProductImageDto>

@{
    ViewData["Title"] = "Product Image";
    int counter = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Ürün Görsel Listesi</h4>
            <p>Ürün görsel ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
            <div class="text-right">
                <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="ProductImage" asp-action="CreateProductImage"><i class="fa fa-lg fa-plus-square-o"></i></a>
            </div>
            <br />
            <div class="bs-example" data-example-id="simple-table">
                <table class="table table-bordered">
                    <caption>
                        Ürün Görseller
                    </caption>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Görseli</th>
                            <th>Ürün Görsel 1</th>
                            <th>Ürün Görsel 2</th>
                            <th>Ürün Görsel 3</th>
                            <th style="width: 140px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@counter</th>
                                <td>@item.ProductName</td>
                                <td class="text-center">
                                    <img src="@item.ProductImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@item.ProductName">
                                </td>
                                <td class="text-center">
                                    <img src="@item.Image1" class="img-thumbnail img-responsive" style="width: 150px" alt="Image1">
                                </td>
                                <td class="text-center">
                                    <img src="@item.Image2" class="img-thumbnail img-responsive" style="width: 150px" alt="Image2">
                                </td>
                                <td class="text-center">
                                    <img src="@item.Image3" class="img-thumbnail img-responsive" style="width: 150px" alt="Image3">
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="ProductImage" asp-action="UpdateProductImage" asp-route-productId="@item.ProductId"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                        <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="ProductImage" asp-action="DeleteProductImage" asp-route-id="@item.Id" onclick="return confirm('Ürün Görsel silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>

                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>