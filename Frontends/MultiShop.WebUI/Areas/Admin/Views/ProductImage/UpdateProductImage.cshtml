@model UpdateProductImageDto

<div class="col-md-12">
    <div class="chart-box">
        <h4>Ürün Görsel Güncelleme</h4>
        <p>Mevcut Ürün görsel bilgilerini güncellemek için aşağıdaki formu kullanabilirsiniz.</p>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" readonly>
            <input type="hidden" asp-for="ProductId" readonly>

            <div class="form-group">
                <label class="control-label" asp-for="ProductName">Ürün Adı</label>
                <input type="text" class="form-control" asp-for="ProductName" readonly>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Image1">Ürün Görsel 1</label>
                <input type="text" class="form-control" placeholder="Ürün Görsel 1 giriniz" asp-for="Image1">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Image2">Ürün Görsel 2</label>
                <input type="text" class="form-control" placeholder="Ürün Görsel 2 giriniz" asp-for="Image2">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Image3">Ürün Görsel 3</label>
                <input type="text" class="form-control" placeholder="Ürün Görsel 3 giriniz" asp-for="Image3">
            </div>
            <div>
                <a class="btn btn-primary btn-outline" asp-area="Admin" asp-controller="Product" asp-action="Index"><i class="fa fa-lg fa-long-arrow-left"></i></a>
                <button type="submit" class="btn btn-success btn-outline pull-right"><i class="fa fa-lg fa-floppy-o"></i></button>
            </div>
        </form>
    </div>
</div>