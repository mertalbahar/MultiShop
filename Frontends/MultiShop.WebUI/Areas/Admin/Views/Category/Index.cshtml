@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Category";
    int counter = 1;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Kategori Listesi</h4>
        <p>Kategori ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
        <div class="bs-example" data-example-id="simple-table">
            <table class="table table-bordered">
                <caption>
                    Kategoriler
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Kategori Ürünleri</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@item.Name</td>
                            <td>Otto</td>
                            <td>
                                <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" onclick="return confirm('Kategori silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
            <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="Category" asp-action="CreateCategory"><i class="fa fa-lg fa-plus-square-o"></i></a>
        </div>
    </div>
</div>