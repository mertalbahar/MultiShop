@model List<ResultDiscountOfferDto>

@{
    ViewData["Title"] = "Discount Offer";
    int counter = 1;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>İndirim Teklif Listesi</h4>
        <p>İndirim teklif ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
        <div class="text-right">
            <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="DiscountOffer" asp-action="CreateDiscountOffer"><i class="fa fa-lg fa-plus-square-o"></i></a>
        </div>
        <br />
        <div class="bs-example" data-example-id="simple-table">
            <table class="table table-bordered">
                <caption>
                    İndirim Teklifler
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>İndirim Teklif Resmi</th>
                        <th>İndirim Teklif Adı</th>
                        <th>İndirim Teklif Alt Adı</th>
                        <th style="width: 140px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>
                                <img src="@item.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@item.Title">
                            </td>
                            <td>@item.Title</td>
                            <td>@item.SubTitle</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="DiscountOffer" asp-action="UpdateDiscountOffer" asp-route-id="@item.Id"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                    <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="DiscountOffer" asp-action="DeleteDiscountOffer" asp-route-id="@item.Id" onclick="return confirm('İndirim Teklifi silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                </div>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>