@model UpdateDiscountOfferDto

<div class="col-md-12">
    <div class="chart-box">
        <h4>İndirim Teklif Güncelleme</h4>
        <p>Mevcut İndirim Teklif bilgilerini güncellemek için aşağıdaki formu kullanabilirsiniz.</p>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" readonly>

            <div class="form-group">
                <img src="@Model.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@Model.Title">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Title">İndirim Teklif Adı</label>
                <input type="text" class="form-control" placeholder="İndirim Teklif adını giriniz" asp-for="Title">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="SubTitle">İndirim Teklif Alt Adı</label>
                <input type="text" class="form-control" placeholder="İndirim Teklif alt adını giriniz" asp-for="SubTitle">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ImageUrl">İndirim Teklif Resmi</label>
                <input type="text" class="form-control" placeholder="İndirim Teklif resmini giriniz" asp-for="ImageUrl">
            </div>
            <div>
                <a class="btn btn-primary btn-outline" asp-area="Admin" asp-controller="DiscountOffer" asp-action="Index"><i class="fa fa-lg fa-long-arrow-left"></i></a>
                <button type="submit" class="btn btn-success btn-outline pull-right"><i class="fa fa-lg fa-floppy-o"></i></button>
            </div>
        </form>
    </div>
</div>