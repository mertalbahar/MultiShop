@model UpdateBrandDto

<div class="col-md-12">
    <div class="chart-box">
        <h4>Marka Güncelleme</h4>
        <p>Mevcut Marka bilgilerini güncellemek için aşağıdaki formu kullanabilirsiniz.</p>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" readonly>

            <div class="form-group">
                <img src="@Model.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@Model.Name">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Name">Marka Adı</label>
                <input type="text" class="form-control" placeholder="Marka adını giriniz" asp-for="Name">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ImageUrl">Marka Resmi</label>
                <input type="text" class="form-control" placeholder="Marka resmini giriniz" asp-for="ImageUrl">
            </div>
            <div>
                <a class="btn btn-primary btn-outline" asp-area="Admin" asp-controller="Brand" asp-action="Index"><i class="fa fa-lg fa-long-arrow-left"></i></a>
                <button type="submit" class="btn btn-success btn-outline pull-right"><i class="fa fa-lg fa-floppy-o"></i></button>
            </div>
        </form>
    </div>
</div>