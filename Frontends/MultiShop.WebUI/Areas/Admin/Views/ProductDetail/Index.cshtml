@model List<ResultProductDetailDto>

@{
    ViewData["Title"] = "Product Detail";
    int counter = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">
            <h4>Ürün Detay Listesi</h4>
            <p>Ürün detay ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
            <div class="text-right">
                <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="ProductDetail" asp-action="CreateProductDetail"><i class="fa fa-lg fa-plus-square-o"></i></a>
            </div>
            <br />
            <div class="bs-example" data-example-id="simple-table">
                <table class="table table-bordered">
                    <caption>
                        Ürün Detayler
                    </caption>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Açıklama</th>
                            <th>Ürün Bilgi</th>
                            <th style="width: 140px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@counter</th>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.Info</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="ProductDetail" asp-action="UpdateProductDetail" asp-route-productId="@item.ProductId"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                        <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="ProductDetail" asp-action="DeleteProductDetail" asp-route-id="@item.Id" onclick="return confirm('Ürün Detay silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                    </div>
                                </td>
                            </tr>

                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>