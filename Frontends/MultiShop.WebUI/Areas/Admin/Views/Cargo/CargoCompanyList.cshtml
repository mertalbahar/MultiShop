@model List<ResultCargoCompanyDto>

@{
    ViewData["Title"] = "Cargo Companies";
    int counter = 1;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Kargo Firma Listesi</h4>
        <p>Kargo firma ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
        <div class="text-right">
            <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="Cargo" asp-action="CreateCargoCompany"><i class="fa fa-lg fa-plus-square-o"></i></a>
        </div>
        <br />
        <div class="bs-example" data-example-id="simple-table">
            <table class="table table-bordered">
                <caption>
                    Kargo Firmalar
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Firma Adı</th>
                        <th style="width: 140px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td>@item.Name</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="Cargo" asp-action="UpdateCargoCompany" asp-route-id="@item.Id"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                    <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="Cargo" asp-action="DeleteCargoCompany" asp-route-id="@item.Id" onclick="return confirm('Kargo firması silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                </div>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>