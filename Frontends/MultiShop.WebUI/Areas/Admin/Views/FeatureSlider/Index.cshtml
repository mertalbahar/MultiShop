@model List<ResultFeatureSliderDto>

@{
    ViewData["Title"] = "Feature Slider";
    int counter = 1;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Öne Çıkan Görsel Listesi</h4>
        <p>Öne çıkan görsel ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
        <div class="text-right">
            <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="FeatureSlider" asp-action="CreateFeatureSlider"><i class="fa fa-lg fa-plus-square-o"></i></a>
        </div>
        <br />
        <div class="bs-example" data-example-id="simple-table">
            <table class="table table-bordered">
                <caption>
                    Öne Çıkan Görseller
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Öne Çıkan Görsel Resmi</th>
                        <th>Öne Çıkan Görsel Adı</th>
                        <th>Öne Çıkan Görsel Açıklama</th>
                        <th>Öne Çıkan Görsel Durumu</th>
                        <th style="width: 140px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td class="text-center">
                                <img src="@item.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@item.Title">
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td class="text-center">
                                <input type="checkbox" asp-for="@item.Status" value="@item.Status" />
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="FeatureSlider" asp-action="UpdateFeatureSlider" asp-route-id="@item.Id"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                    <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="FeatureSlider" asp-action="DeleteFeatureSlider" asp-route-id="@item.Id" onclick="return confirm('Öne çıkan görsel silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                </div>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>