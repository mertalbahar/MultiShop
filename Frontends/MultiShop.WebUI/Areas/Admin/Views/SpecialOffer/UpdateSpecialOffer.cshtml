@model UpdateSpecialOfferDto

<div class="col-md-12">
    <div class="chart-box">
        <h4>Özel Teklif Güncelleme</h4>
        <p>Mevcut özel teklif bilgilerini güncellemek için aşağıdaki formu kullanabilirsiniz.</p>
        <br />
        <form method="post">
            <input type="hidden" asp-for="Id" readonly>

            <div class="form-group">
                <img src="@Model.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@Model.Title">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Title">Özel Teklif Adı</label>
                <input type="text" class="form-control" placeholder="Özel Teklif adını giriniz" asp-for="Title">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="SubTitle">Özel Teklif Alt Adı</label>
                <input type="text" class="form-control" placeholder="Özel Teklif alt adını giriniz" asp-for="SubTitle">
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ImageUrl">Özel Teklif Resmi</label>
                <input type="text" class="form-control" placeholder="Özel Teklif resmini giriniz" asp-for="ImageUrl">
            </div>
            <div>
                <a class="btn btn-primary btn-outline" asp-area="Admin" asp-controller="SpecialOffer" asp-action="Index"><i class="fa fa-lg fa-long-arrow-left"></i></a>
                <button type="submit" class="btn btn-success btn-outline pull-right"><i class="fa fa-lg fa-floppy-o"></i></button>
            </div>
        </form>
    </div>
</div>