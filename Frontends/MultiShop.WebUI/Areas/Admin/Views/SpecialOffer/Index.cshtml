@model List<ResultSpecialOfferDto>

@{
    ViewData["Title"] = "Special Offer";
    int counter = 1;
}

<div class="col-md-12">
    <div class="chart-box">
        <h4>Özel Teklif Listesi</h4>
        <p>Özel teklif ile ilgili işlemlerinizi gerçekleştirebilirsiniz.</p>
        <div class="text-right">
            <a class="btn btn-rounded btn-success" asp-area="Admin" asp-controller="SpecialOffer" asp-action="CreateSpecialOffer"><i class="fa fa-lg fa-plus-square-o"></i></a>
        </div>
        <br />
        <div class="bs-example" data-example-id="simple-table">
            <table class="table table-bordered">
                <caption>
                    Özel Teklifler
                </caption>
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Özel Teklif Resmi</th>
                        <th>Özel Teklif Adı</th>
                        <th>Özel Teklif Alt Adı</th>
                        <th style="width: 140px">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@counter</th>
                            <td class="text-center">
                                <img src="@item.ImageUrl" class="img-thumbnail img-responsive" style="width: 150px" alt="@item.Title">
                            </td>
                            <td>@item.Title</td>
                            <td>@item.SubTitle</td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <a class="btn btn-rounded btn-warning" asp-area="Admin" asp-controller="SpecialOffer" asp-action="UpdateSpecialOffer" asp-route-id="@item.Id"><i class="fa fa-lg fa-pencil-square-o"></i></a>
                                    <a class="btn btn-rounded btn-danger" asp-area="Admin" asp-controller="SpecialOffer" asp-action="DeleteSpecialOffer" asp-route-id="@item.Id" onclick="return confirm('Özel Teklif silinecektir, onaylıyor musunuz?')"><i class="fa fa-lg fa-trash-o"></i></a>
                                </div>
                            </td>
                        </tr>

                        counter++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>