@model List<ResultOrderingDto>

@{
    ViewData["Title"] = "User Order";
    int counter = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sipariş Bilgilerim</h4>
            <p class="card-description">
                Siparişleriniz burada görüntülenir.
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Toplam Tutar</th>
                            <th>Sipariş Tarihi</th>
                            <th>Sipariş Detayları</th>
                            <th>Sipariş Durumu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.TotalPrice</td>
                                <td>@item.OrderDate.ToLongDateString()</td>
                                <td><button class="btn btn-light">Detaylar</button></td>
                                <td><label class="badge badge-danger">Pending</label></td>
                            </tr>

                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>