@model UpdateUserMessageDto

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="mb-3 d-flex justify-content-end">
                <a class="btn btn-lg btn-secondary" asp-controller="Message" asp-action="Inbox">Geri</a>
            </div>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ReceiverId" />

                <div class="d-flex justify-content-end">
                    <label asp-for="CreatedDate" readonly>@Model.CreatedDate</label>
                </div>
                <div class="form-group">
                    <label asp-for="SenderId">Gönderen</label>
                    <input type="text" class="form-control" asp-for="SenderId" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Subject">Konu</label>
                    <input type="text" class="form-control" asp-for="Subject" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">Detay</label>
                    <textarea class="form-control" rows="5" cols="30" asp-for="Detail" readonly></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.IsRead">
                        <input type="checkbox" asp-for="@Model.IsRead">
                        @(Model.IsRead ? "Okundu" : "Okunmadı")
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>