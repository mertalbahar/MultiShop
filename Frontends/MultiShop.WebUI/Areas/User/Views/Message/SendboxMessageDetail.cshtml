@model GetByIdUserMessageDto

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="mb-3 d-flex justify-content-end">
                <a class="btn btn-lg btn-secondary" asp-controller="Message" asp-action="Sendbox">Geri</a>
            </div>
            <form>
                <div class="d-flex justify-content-end">
                    <label asp-for="CreatedDate" readonly>@Model.CreatedDate</label>
                </div>
                <div class="form-group">
                    <label asp-for="ReceiverId">Alıcı</label>
                    <input type="text" class="form-control" asp-for="ReceiverId" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Subject">Konu</label>
                    <input type="text" class="form-control" asp-for="Subject" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">Detay</label>
                    <textarea class="form-control" rows="5" cols="30" asp-for="Detail" readonly></textarea>
                </div>
            </form>
        </div>
    </div>
</div>