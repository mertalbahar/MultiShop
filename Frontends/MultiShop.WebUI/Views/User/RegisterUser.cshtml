@model UserRegisterDto

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MultiShop - Kayıt Ol</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/templates/spica/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/templates/spica/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/templates/spica/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/templates/spica/images/favicon.png" />
</head>

<body>
    <div class="container-scroller d-flex">
        <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-right">
                                <div class="btn-group pb-2 pb-lg-0" role="group">
                                    <a class="btn btn-block btn-info btn-lg font-weight-medium" asp-controller="Home" asp-action="Index">Anasayfa</a>
                                </div>
                            </div>
                            <h4>Buralarda yeni misin?</h4>
                            <h6 class="font-weight-light">Bir kaç adımda kolayca üye olabilirsin.</h6>
                            <form class="pt-3">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Adınız" asp-for="Name">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Soyadınız" asp-for="Surname">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" placeholder="Email" asp-for="Email">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adı" asp-for="UserName">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifre" asp-for="Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifre Tekrar" asp-for="ConfirmPassword">
                                </div>
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Üyeliğiniz var mı? <a class="text-primary" asp-controller="User" asp-action="LoginUser">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/templates/spica/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/templates/spica/js/off-canvas.js"></script>
    <script src="~/templates/spica/js/hoverable-collapse.js"></script>
    <script src="~/templates/spica/js/template.js"></script>
    <!-- endinject -->
</body>

</html>