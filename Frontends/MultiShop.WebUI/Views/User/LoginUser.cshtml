@model UserLoginDto

@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>MultiShop - Giriş Yap</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/templates/spica/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/templates/spica/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/templates/spica/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/templates/spica/images/favicon.png" />
</head>

<body>
    <div class="container-scroller d-flex">
        <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo text-right">
                                <div class="btn-group pb-2 pb-lg-0" role="group">
                                    <a class="btn btn-block btn-info btn-lg font-weight-medium" asp-controller="Home" asp-action="Index">Anasayfa</a>
                                </div>
                            </div>
                            <h4>Merhabalar, MultiShop sitemize hoşgeldiniz.</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adı" asp-for="UserName">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" placeholder="Şifre" asp-for="Password">
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Keep me signed in
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Forgot password?</a>
                                </div>
                                <div class="mb-2">
                                    <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                        <i class="mdi mdi-facebook mr-2"></i>Connect using facebook
                                    </button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Üyeliğiniz yok mu? <a class="text-primary" asp-controller="User" asp-action="RegisterUser">Üye Ol</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="~/templates/spica/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/templates/spica/js/off-canvas.js"></script>
    <script src="~/templates/spica/js/hoverable-collapse.js"></script>
    <script src="~/templates/spica/js/template.js"></script>
    <!-- endinject -->
</body>
</html>