@model UserRegisterDto

@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Form-v4 by Colorlib</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/templates/regform/css/opensans-font.css">
    <link rel="stylesheet" type="text/css" href="~/templates/regform/fonts/line-awesome/css/line-awesome.min.css">
    <!-- Jquery -->
    <link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/templates/regform/css/style.css" />
</head>
<body class="form-v4">
    <div class="page-content">
        <div class="form-v4-content">
            <form class="form-detail" method="post">
                <h2>MultiShop Kayıt Formu</h2>
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <label asp-for="Name">Adınız</label>
                        <input type="text" asp-for="Name" id="first_name" class="input-text">
                    </div>
                    <div class="form-row form-row-1">
                        <label asp-for="Surname">Soyadınız</label>
                        <input type="text" asp-for="Surname" id="last_name" class="input-text">
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <label asp-for="UserName">Kullanıcı Adı</label>
                        <input type="text" asp-for="UserName" id="user_name" class="input-text">
                    </div>
                    <div class="form-row form-row-1">
                        <label asp-for="Email">Email</label>
                        <input type="text" asp-for="Email" id="your_email" class="input-text" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row form-row-1 ">
                        <label asp-for="Password">Şifre</label>
                        <input type="password" asp-for="Password" id="password" class="input-text" required>
                    </div>
                    <div class="form-row form-row-1">
                        <label asp-for="ConfirmPassword">Şifre Onay</label>
                        <input type="password" asp-for="ConfirmPassword" id="comfirm_password" class="input-text" required>
                    </div>
                </div>
                <div class="form-checkbox">
                    <label class="container">
                        <p><a href="#" class="text">Kullanıcı şartları</a>'nı okudum, onaylıyorum.</p>
                        <input type="checkbox" name="checkbox">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-group">
                    <div class="form-row form-row-1">
                        <input type="submit" name="register" class="register" value="Kayıt Ol">
                    </div>
                    <div class="form-row form-row-1">
                        <a href="#" name="account" class="account">Üyeliğiniz var mı?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>