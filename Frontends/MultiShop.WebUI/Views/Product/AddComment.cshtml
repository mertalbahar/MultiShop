<h4 class="mb-4">Yorum bırakın</h4>
<small>* Zorunlu alanlar</small>
<form method="post" asp-controller="Product" asp-action="AddComment">
    <input type="hidden" name="ProductId" value="@ViewBag.Id" />

<div class="d-flex my-3">
    <p class="mb-0 mr-2">Puanınız * :</p>
    <div class="text-primary">
        <input type="radio" id="star1" name="Rating" value="1" />
            <label for="star1">1</label>
        <input type="radio" id="star2" name="Rating" value="2" />
            <label for="star2">2</label>
        <input type="radio" id="star3" name="Rating" value="3" />
            <label for="star3">3</label>
        <input type="radio" id="star4" name="Rating" value="4" />
            <label for="star4">4</label>
        <input type="radio" id="star5" name="Rating" value="5" />
            <label for="star5">5</label>
    </div>
</div>
    <div class="form-group">
        <label name="FullName">Adınız Soyadınız *</label>
        <input type="text" class="form-control" id="name" name="FullName">
    </div>
    <div class="form-group">
        <label name="Email">Email Adresiniz *</label>
        <input type="email" class="form-control" id="email" name="Email">
    </div>
    <div class="form-group">
        <label name="CommentDetail">Yorumunuz *</label>
        <textarea id="message" cols="30" rows="5" class="form-control" name="CommentDetail"></textarea>
    </div>
    <div class="form-group mb-0">
        <input type="submit" value="Yorum Yap" class="btn btn-primary px-3">
    </div>
</form>