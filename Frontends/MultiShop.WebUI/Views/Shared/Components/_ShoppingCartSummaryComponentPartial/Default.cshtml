@model BasketTotalDto

<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sepet Özeti</span></h5>
<div class="bg-light p-30 mb-5">
    <div class="border-bottom pb-2">
        <div class="d-flex justify-content-between mb-3">
            <h6>Sepet Tutarı</h6>
            <h6>@Model.TotalPrice.ToString("C2")</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Vergi (%18)</h6>
            <h6 class="font-weight-medium">@ViewBag.TaxPrice.ToString("C2")</h6>
        </div>
        @if (ViewBag.Code != null)
        {
            <div class="d-flex justify-content-between">
                <h6 class="font-weight-medium">İndirim Kodu: @ViewBag.Code (%@ViewBag.DiscountRate)</h6>
                <h6 class="font-weight-medium">@ViewBag.DiscountPrice.ToString("C2")</h6>
            </div>
        }
    </div>
    <div class="pt-2">
        <div class="d-flex justify-content-between mt-2">
            <h5>Toplam Tutar</h5>
            <h5>@ViewBag.CartTotal.ToString("C2")</h5>
        </div>
        <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Ödeme İşlemine Geç</button>
    </div>
</div>