@model IEnumerable<ResultUserCommentDto>

<div class="tab-pane fade" id="tab-pane-3">
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">@Model.Count() review for "Product Name"</h4>
            @foreach (var item in Model)
            {
                <div class="media mb-4">
                    <img src="@(item.ImageUrl == null ? "/img/user/default-user.png" : item.ImageUrl)" alt="@item.FullName" class="img-fluid mr-3 mt-1" style="width: 45px;">
                    <div class="media-body">
                        <h6>@item.FullName<small> - <i>@item.CreatedDate.ToShortDateString()</i></small></h6>
                        <div class="text-primary mb-2">
                            @for (int i = 1; i <= item.Rating; i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                        </div>
                        <p>@item.CommentDetail</p>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            @await Html.PartialAsync("~/Views/Product/AddComment.cshtml", new {id = ViewBag.Id})
        </div>
    </div>
</div>