@model CreateOrderAddressDto

<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Ödeme Adresi</span></h5>
<div class="bg-light p-30 mb-5">
    <div class="row">
        <div class="col-md-6 form-group">
            <label>Adınız</label>
            <input class="form-control" type="text" placeholder="Adınız" asp-for="Name">
        </div>
        <div class="col-md-6 form-group">
            <label>Soyadınız</label>
            <input class="form-control" type="text" placeholder="Soyadınız" asp-for="Surname">
        </div>
        <div class="col-md-6 form-group">
            <label>E-mail</label>
            <input class="form-control" type="text" placeholder="example@email.com" asp-for="Email">
        </div>
        <div class="col-md-6 form-group">
            <label>Telefon</label>
            <input class="form-control" type="text" placeholder="123 456 78 99" asp-for="Phone">
        </div>
        <div class="col-md-6 form-group">
            <label>Adres Satır 1</label>
            <input class="form-control" type="text" placeholder="Adresiniz" asp-for="Line1">
        </div>
        <div class="col-md-6 form-group">
            <label>Adres Satır 2</label>
            <input class="form-control" type="text" placeholder="Adresinizin devamı" asp-for="Line2">
        </div>
        <div class="col-md-6 form-group">
            <label>İlçe</label>
            <input class="form-control" type="text" placeholder="İlçe" asp-for="District">
        </div>
        <div class="col-md-6 form-group">
            <label>Şehir</label>
            <input class="form-control" type="text" placeholder="Şehir" asp-for="City">
        </div>
        <div class="col-md-6 form-group">
            <label>Ülke</label>
            <input class="form-control" type="text" placeholder="Ülke" asp-for="Country">
        </div>
        <div class="col-md-6 form-group">
            <label>Posta Kodu</label>
            <input class="form-control" type="text" placeholder="12345" asp-for="ZipCode">
        </div>
        <div class="col-md-12">
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="shipto">
                <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">Farklı adrese gönder</label>
            </div>
        </div>
    </div>
</div>